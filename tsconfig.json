{
  "compilerOptions": {
    "jsx": "react-jsx",  // Enable React JSX support
    "esModuleInterop": true, // Allows importing React modules properly
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "src/declarations.d.ts"]
}